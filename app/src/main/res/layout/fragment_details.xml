<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextHeader"
            android:background="@null"
            android:layout_width="@dimen/EditTextWidth"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="@string/TitleEditText"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/margin_start_note_fragment"
            android:textSize="@dimen/text_size_header"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSetDate"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/MarginTopButtonSetDate"
            android:layout_marginStart="@dimen/margin_start_buttonSetDate"
            android:layout_height="wrap_content"
            android:backgroundTint="#90CAF9"
            android:textColor="@color/material_on_background_emphasis_high_type"
            android:text="@string/setDate" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textViewDate"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#C5E1A5"
            android:layout_marginStart="@dimen/margin_start_note_fragment"
            android:alpha="0.6"
            android:textSize="@dimen/text_size_date"
            android:text="@string/date" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextDescription"
            android:background="@null"
            android:layout_marginTop="@dimen/editTextMarginTop"
            android:layout_width="@dimen/EditTextWidth"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_note_fragment"
            android:text=""
            android:hint="@string/editTextDescription"
            android:textColor="@color/material_on_surface_emphasis_medium"
            android:textSize="@dimen/text_size_description" />

    </LinearLayout>


</ScrollView>